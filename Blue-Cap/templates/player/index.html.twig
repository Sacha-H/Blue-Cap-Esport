{% extends 'base.html.twig' %} 

{% block title %}Player index{% endblock %}

{% block body %}
    

    <section class="admin">
    <h1>Admin</h1>
    <h2>Joueurs</h2>
    <div  class="add">
<a href="{{ path('player_new') }}"><i class="fas fa-plus-circle"></i></a>
</div>
<div class="table-responsive">
        <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>jeux</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Date de naissance</th>
                <th>Description</th>
                <th>Role</th>
                <th>Image</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.pseudoPlayer }}</td>
                <td>{{ player.game.nameGame }}</td>
                <td>{{ player.firstNamePlayer }}</td>
                <td>{{ player.lastNamePlayer }}</td>
                <td>{{ player.datePlayer ? player.datePlayer|date('Y-m-d') : '' }}</td>
                <td><img src="{{ asset('uploads/images/' ~ player.imagePlayer) }}" height="100"></td>
                <td>{{ player.descriptionPlayer }}</td>
                <td>{{ player.rolePlayer }}</td>
                <td><a href="{{ path('player_show', {'id': player.id}) }}"><i class="fas fa-eye"></a></td>
                <td><a href="{{ path('player_edit', {'id': player.id}) }}"><i class="fas fa-edit"></a></td>
                <td>{{ include('player/_delete_form.html.twig') }}</td>
            
     {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div  class="add">
