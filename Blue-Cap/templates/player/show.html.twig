    <h1>Player</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>PseudoPlayer</th>
                <td>{{ player.pseudoPlayer }}</td>
            </tr>
            <tr>
                <th>FirstNamePlayer</th>
