{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <section class="admin">
    <h1>Admin</h1>
    <h2>Article</h2>
    <div  class="add">
<a href="{{ path('article_new') }}"><i class="fas fa-plus-circle"></i></a>
</div>
<div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>image</th>
                    <th>voir</th>
                    <th>modifier</th>
                    <th>supprimer</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.titleArticle }}</td>
                    <td>{{ article.descriptionArticle }}</td>
                    <td>{{ article.dateArticle ? article.dateArticle|date('Y-m-d') : '' }}</td>
                    <td><img src="{{ asset('uploads/images/' ~ article.imageArticle) }}" height="100"></td>
                    <td><a href="{{ path('article_show', {'id': article.id}) }}"><i class="fas fa-eye"></i></a></td>
                    <td><a href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i></a></td>
                    <td>{{ include('article/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
         <div  class="add">
<a href="{{ path('article_new') }}"><i class="fas fa-plus-circle"></i></a>
</div>
        </div>
    </section>

{% endblock %}
